<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="16dp">

            <ImageView
                    android:id="@+id/img_plane"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:src="@drawable/ic_plane"
                    android:layout_marginRight="8dp"/>

            <TextView
                    android:id="@+id/airline"
                    android:layout_toRightOf="@+id/img_plane"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textSize="18sp"/>

            <LinearLayout android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal"
                          android:layout_alignParentRight="true"
            android:gravity="center">

                <ImageView
                        android:id="@+id/img_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="8dp"/>

                <TextView
                        android:id="@+id/plane_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="normal"
                        android:textColor="#767676"
                        android:textSize="16sp"/>

            </LinearLayout>


        </RelativeLayout>

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="1dp"
                      android:background="#767676"/>

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical"
                      android:padding="16dp">

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:id="@+id/departure_time"
                        android:layout_alignParentLeft="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="normal"
                        android:textColor="#767676"
                        android:textSize="14sp"
                        android:text="Departure Time"/>

                <TextView
                        android:id="@+id/departure_time_text"
                        android:layout_below="@+id/departure_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:textSize="14sp"/>

                <TextView
                        android:id="@+id/flight_number"
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="normal"
                        android:textColor="#767676"
                        android:textSize="14sp"
                        android:text="Flight Number"/>

                <TextView
                        android:id="@+id/flight_number_text"
                        android:layout_below="@+id/flight_number"
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:textSize="14sp"/>

                <TextView
                        android:id="@+id/destination"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="normal"
                        android:textColor="#767676"
                        android:textSize="14sp"
                        android:text="Destination"/>

                <TextView
                        android:id="@+id/destination_text"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/destination"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:textSize="14sp"/>
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>